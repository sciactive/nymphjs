{
  "extends": "@tsconfig/recommended/tsconfig.json",

  "compilerOptions": {
    "lib": ["DOM", "ES2021"],
    "target": "ES2021",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src/",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
