  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,

    "removeComments": true,
    "sourceMap": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "./",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
