{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "compilerOptions": {
    "lib": ["DOM", "ES2021"],
    "target": "ES2021",
    "noImplicitAny": true,
    "strict": true,

    "removeComments": false,
    "sourceMap": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
