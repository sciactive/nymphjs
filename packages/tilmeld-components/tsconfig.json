{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2022"],
    "target": "ES2022",
    "noImplicitAny": true,
    "strict": true,

    "removeComments": false,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src/",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
