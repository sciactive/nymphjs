{
  "name": "@nymphjs/driver-postgresql",
  "version": "1.0.0-beta.2",
  "description": "NymphJS - PostgreSQL DB Driver",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "nymph",
    "ORM",
    "object relational mapper"
  ],
  "scripts": {
    "clean": "test -d dist && rm -r dist || true",
    "build": "tsc;  cp src/runPostgresqlSync.js dist/runPostgresqlSync.js",
    "watch": "tsc --watch",
    "prepare": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:db:run": "npm run test:db:start && npm run test:db:clean",
    "test:db:clean": "docker container rm nymph-postgresql",
    "test:db:start": "docker run --name nymph-postgresql -e POSTGRES_USER=nymph -e POSTGRES_PASSWORD=nymph -p 5432:5432 postgres",
    "test:db:stop": "docker kill -s TERM nymph-postgresql"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sciactive/nymphjs.git"
  },
  "author": "Hunter Perrin <hperrin@gmail.com>",
  "bugs": {
    "url": "https://github.com/sciactive/nymphjs/issues"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@nymphjs/guid": "^1.0.0-beta.2",
    "@nymphjs/nymph": "^1.0.0-beta.2",
    "pg": "^8.8.0",
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^29.2.3",
    "@types/pg": "^8.6.5",
    "@types/pg-format": "^1.0.2",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  }
}
