{
  "name": "nymphjs",
  "version": "1.0.0",
  "description": "An ORM for Node.js.",
  "scripts": {
    "lint:format": "prettier --write .",
    "lint:check": "prettier --check .",
    "clean": "lerna run clean",
    "docs": "typedoc",
    "prepare": "husky install && npm run bootstrap && npm run lint:check",
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test --concurrency=1 --stream --no-prefix --no-bail -- -- --passWithNoTests",
    "test:db:run": "lerna run test:db:run --stream --parallel",
    "test:db:stop": "lerna run test:db:stop"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sciactive/nymphjs.git"
  },
  "keywords": [
    "nymph",
    "ORM",
    "object relational mapper"
  ],
  "author": "Hunter Perrin <hperrin@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sciactive/nymphjs/issues"
  },
  "homepage": "https://github.com/sciactive/nymphjs#readme",
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "prettier": "2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
